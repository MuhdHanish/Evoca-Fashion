{{>admin-header}}

<div class="site-section my-5">
  <div class="container">
    <form action="/admin/admin-addproducts" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-6 mb-5 mb-md-0 ">
          <h2 class="h3 mb-3 text-black" style="font-family: 'Bebas Neue', cursive;">ADD PRODUCT</h2>
          <div class="p-3 p-lg-5 border">

            <div class="form-group row mb-3">
              <div class="col-md-6">
                <label for="c_fname" class="text-black">Product Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="c_fname" placeholder="Product Name"
                  style="border: black 1px solid;border-radius:0;" value="{{adddata.title}}" name="title">
              </div>
              <div class="col-md-6">
                <label for="c_lname" class="text-black">Brand Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="c_lname" placeholder="Brand Name"
                  style="border: black 1px solid;border-radius:0;" value="{{adddata.brand}}" name="brand">
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-md-6">
                <label for="c_state_country" class="text-black">Price<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="c_state" placeholder="Price"
                  style="border: black 1px solid;border-radius:0;" name="price" value="{{adddata.price}}">
              </div>
              <div class="col-md-6">
                <label for="c_companyname" class="text-black">Stock <span class="text-danger">*</span></label>
                <input class="form-control" id="c_district" placeholder="Stock"
                  style="border: black 1px solid;border-radius:0;" type="number" name="stock" value="{{adddata.stock}}">
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-md-6">
                <label for="c_postal_zip" class="text-black">Discount<span class="text-danger">*</span></label>
                <input type="text" name="discount" value="0" class="form-control" id="c_pin" placeholder="Discound"
                  style="border: black 1px solid;border-radius:0;" value="{{Selected.pin}}">
              </div>

              <div class="col-md-6">
                <label for="c_phone" class="text-black">Category <span class="text-danger">*</span></label>
                <select name="category" class="form-control form-control-line"
                  style="border: #000000 1px solid;border-radius:0;">
                  <option value="">Select the category</option>
                  {{#each Category}}
                  <option value="{{category}}">{{category}}</option>
                  {{/each}}
                </select>
                </select>
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-md-12">
                <label for="c_companyname" class="text-black">Discription <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="c_address" placeholder="Discription"
                  style="border: black 1px solid;border-radius:0;" name="description" value="{{adddata.description}}">
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-md-12">
                <label for="c_companyname" class="text-black">Size<span class="text-danger">* </span></label>
                SMALL<input type="checkbox" name="small" id="" class="ms-1 me-3">
                MEDIUM<input type="checkbox" name="medium" id="" class="ms-1 me-3">
                LARGE<input type="checkbox" name="large" id="" class="ms-1 ">
              </div>
            </div>

            <div class="form-group row mb-3">
              <div class="col-md-12">
                <label for="c_companyname" class="text-black">Product-Image<small
                    class="text-danger">(Required-4)</small><span class="text-danger">*</span></label>
                <input multiple required type="file" style="border: black 1px solid;border-radius:0;" accept="image/*"
                  class="form-control" id="basic-default-name" name="images" />
              </div>
            </div>
          </div>
        </div>



        <div class="col-md-6">
          <h2 class="h3 mb-3" style="color: white;">Add Product</h2>
          <div class="row mb-5">
            <div class="col-md-12">
              <div class="p-3 p-lg-5 border">
                <div class="form-group  text-center">
                  <button class=" model-btn" type="submit" style="font-family: 'Josefin Sans', sans-serif;">Add
                    Product</button>
                </div>
              </div>
            </div>
          </div>
          <h6 class="text-danger text-center mb-4">{{addsererr}}</h6>
        </div>
    </form>
    <!-- </form> -->
  </div>
</div>