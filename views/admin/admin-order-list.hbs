{{>admin-header}}

<style>
  table.dataTable thead th {
    text-align: center;
  }

  table.dataTable tbody td {
    text-align: center;
  }
</style>

<section id="cart-container" class="container my-5 order-details">
  <table width="100%" id="admin-order-list">
    <thead>
      <tr class="text-center">
        <th>Fullname</th>
        <th>Date</th>
        <th>Phone</th>
        <th>Amount</th>
        <th>Method</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody class="pt-5 pb-5">
      {{#each orders}}
      <tr style="border-bottom: rgb(196, 196, 196) 1px solid;">
        <td>{{deliveryDetails.fname}} {{deliveryDetails.lname}}</td>
        <td>{{date}}</td>
        <td>{{deliveryDetails.mobile}}</td>
        <td>â‚¹{{amount}}</td>
        <td>{{payment}}</td>
        {{#if (eq paymentStatus "Paid")}}
        <td class="text-success">{{paymentStatus}}</td>
        {{else}}
        {{#if (eq paymentStatus "Pending")}}
        <td class="text-warning">{{paymentStatus}}</td>
        {{else}}
        <td class="text-danger">{{paymentStatus}}</td>
        {{/if}}
        {{/if}}
        {{#if (eq orderStatus "Return Process")}}
        <td><button onclick="location. href='/admin/admin-order-details/{{_id}}'" class="model-btn text-waring"
            style="padding: 8px 15px;">Details</button></td>
        {{else}}
        {{#if (eq orderStatus "Return Agreed")}}
        <td><button onclick="location. href='/admin/admin-order-details/{{_id}}'" class="model-btn text-danger"
            style="padding: 8px 15px;">Details</button></td>
        {{else}}
        <td><button onclick="location. href='/admin/admin-order-details/{{_id}}'" class="model-btn"
            style="padding: 8px 15px;">Details</button></td>
        {{/if}}
        {{/if}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>

<script>
  $(document).ready(function () {
    $('#admin-order-list').DataTable();
  });
</script>