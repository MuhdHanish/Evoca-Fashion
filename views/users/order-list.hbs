{{>user-header}}

<div class="table-responsive p-5">
  <table id="Order-list" class="large-screen">
    <thead>
      <tr>
        <th>Date</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Amount</th>
        <th>Method</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr style="border-bottom: rgb(196, 196, 196) 1px solid;">
        <td>{{date}}</td>
        <td>{{deliveryDetails.address}},
          {{deliveryDetails.pin}}</td>
        <td>{{deliveryDetails.mobile}}</td>
        <td>â‚¹{{amount}}</td>
        <td>{{payment}}</td>
        {{#if (eq orderStatus "Placed")}}
        <td class="text-success">{{orderStatus}}</td>
        {{else}}
        {{#if (eq orderStatus "Shipped")}}
        <td class="text-primary">{{orderStatus}}</td>
        {{else}}
        {{#if (eq orderStatus "Delivered")}}
        <td class="text-success">{{orderStatus}}</td>
        {{else}}
        {{#if (eq orderStatus "Cancelled")}}
        <td class="text-danger">{{orderStatus}}</td>
        {{else}}
        <td class="text-secondary">{{orderStatus}}</td>
        {{/if}}
        {{/if}}
        {{/if}}
        {{/if}}
        {{#if (eq orderStatus "Cancelled")}}
        <td><a href="/order-details/{{_id}}" class="btn btn-outline-success">Details</a></td>
        {{else}}
        {{#if (eq orderStatus "Delivered")}}
        {{#if (eq disAgreed true)}}
        <td><span class="d-flex align-items-center"><a href="/order-details/{{_id}}" class="btn btn-outline-success">Details</a><i class="fa-regular text-danger ms-2 fa-circle-xmark"></i></span></td>
        {{else}}
        <td><a href="/order-details/{{_id}}" class="btn btn-outline-success">Details</a></td>
        {{/if}}
        {{else}}
        {{#if (eq orderStatus "Return Process")}}
        <td><a href="/order-details/{{_id}}" class="btn btn-outline-success">Details</a>
        </td>
        {{else}}
        {{#if (eq orderStatus "Return Agreed")}}
        <td><a href="/order-details/{{_id}}" class="btn btn-outline-success">Details</a></td>
        {{else}}
        <td><a href="/order-details/{{_id}}" class="btn btn-outline-success">Details</a>
          <a href="/cancel-order/{{_id}}" class="btn btn-outline-danger">Cancel</a>
        </td>
        {{/if}}
        {{/if}}
        {{/if}}
        {{/if}}
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


<script>
  $(document).ready(function () {
    $('#Order-list').DataTable();
  });
</script>