<div class="container-xxl justify-content-center col-12 col-sm-10 col-md-8 col-lg-6 mt-5 pt-5">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <!-- Register -->
    <div class="card "
      style="border-top-left-radius: 10px;border-bottom-right-radius: 10px; border: 1px solid;box-shadow: rgba(255, 255, 255, 0.1) 0px 1px 1px 0px inset, rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;">
      <div class="card-body">
        <!-- Logo -->
        <div class="app-brand justify-content-center">

          </span>
          <span class="app-brand-text demo text-body fw-bolder mb-5 fs-3">Evoca</span>
          </a>
        </div>
        <!-- /Logo -->

        <form id="formAuthentication" name="loginform" onsubmit="return login()" class="mt-5 mb-3" action="/login"
          method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" style="border-radius:0% ;border: 1px solid;"
              placeholder="Enter your email " autofocus value="{{logdata.email}}" />
          </div>
          <div class="mb-3 form-password-toggle">
            <div class="d-flex justify-content-between">
              <label class="form-label" for="password">Password</label>
              <a href="/forgot-password" class="link-line">
                <small>Forgot Password?</small>
              </a>
            </div>
            <div class="input-group input-group-merge">
              <input type="password" id="password" class="form-control" name="password"
                style="border-radius:0% ;border: 1px solid;" placeholder="Enter your password"
                aria-describedby="password" value="{{logdata.password}}" />
            </div>
          </div>
          <div class="mb-3">
            <p class="text-danger" id="error">{{error}}</p>
          </div>
          <div class="box">
            <button class="btn btn-dark d-grid offset-4 col-4 log-btn" type="submit">Log in</button>
            <p class="text-center text-muted mt-3 mb-0"><a href="/otp-login"
                style="text-decoration: none;">OTP-Login</a></p>
            <p class="text-center text-muted mt-3 mb-0">New on our platform?<a href="/signup"
                style="text-decoration: none;"> Register here</a></p>
          </div>

        </form>

      </div>
    </div>