{{>user-header}}
<section style="background-color: #ffffff">
  <div class="col-lg-12 container">
    <div class="row">
      <div class="col-lg-4 col-12 mt-5 pt-5">
        <div class="card-body p-0 " style="border: rgb(186, 183, 183) 1px solid;">
          <ul class="list-group list-group-flush rounded-3">
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0">{{orderDetails.date}}</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0">{{orderDetails.deliveryDetails.fname}} {{orderDetails.deliveryDetails.lname}}</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0">+91 {{orderDetails.deliveryDetails.mobile}}</p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0">â‚¹ {{orderDetails.amount}}</p>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0">{{orderDetails.deliveryDetails.country}} <br> {{orderDetails.deliveryDetails.state}} <br>
                {{orderDetails.deliveryDetails.district}}
              </p>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
              <p class="mb-0">{{orderDetails.deliveryDetails.address}}</p>
            </li>
            <li class="list-group-item p-3">
              <button class="model-btn" style="border-radius: 0;background-color: black;"
                onclick="location.href='/download-invoice/{{orderDetails._id}}'">Download</button>
            </li>
          </ul>
        </div>
      </div>
      <div class="col-lg-8 col-12">
        <div class="mb-5 pb-5">
          <div class="text-center mt-5">
            <h2 style="font-family: 'Tilt Warp', cursive;"><i>Thanks For Purchase</i></h2>
          </div>
          <div class="text-center mt-5 mb-5">
            <img src="/images/on-the-way.gif" alt="" class="img-fluid">
          </div>
          <div class="text-center col-lg-12 col-md-12 col-sm-12 col-12 " style="">
            <button class="model-btn mb-3" style="border-radius: 50px;" onclick="window.location.href='/shop'">Back To
              Shop</button>
            <button class="model-order-btn ms-3" style="border-radius: 50px;"
              onclick="window.location.href='/user-orderlist'">Go
              To Orders</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{{>user-footer}}